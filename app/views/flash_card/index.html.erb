<!DOCTYPE html>
<html lang="ja">
<head>
  <title>MyFlashCards</title>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
   <!-- <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"></script> -->
   <!-- <script type="text/javascript" src=..//s/assignment.js"></script>
   <script type="text/javascript" src=..//s/jquery-linedtextarea.js"></script> -->
   <meta name="viewport" content="width=device-width, initial-scale=1.0, max-layoutum-scale=1.0, minimum-scale=1.0">
   <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
   <!-- <link rel="stylesheet" href=/css/assignment.css"> -->
   <!-- <link rel="stylesheet" href="css/jquery-linedtextarea.css"> -->
</head>

<body>

  <!-- ヘッダー -->
  <div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">
    <header class="mdl-layout__header">
      <div class="mdl-layout__header-row">
        <span class="mdl-layout-title" id="small_title">MFC</span>
        <span class="mdl-layout-title" id="big_title">EPC</span>
        <div class="mdl-layout-spacer"></div>
        <input id="vocalization" class="vocalization" type="text" size="30"></form>
        <div class="vocalization_button mdl-button mdl-js-button mdl-button--raised">Play</div>
        <nav class="mdl-navigation">
          <a class="mdl-navigation__link" href="#" onclick="shuffleFileCards();">
            <i class="material-icons">shuffle</i>
          </a>
          <a class="mdl-navigation__link" href="#" onclick="chooseJson();">Import</a>
        </nav>
        <% if current_user.blank? #userが存在するかの確認 %>
        <%= link_to 'Login','user/sign_in',class:"login_button mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% else %>
        <span><%= @user.Username %>さん</span>
        <%= link_to 'LogOut','user/sign_out',:method => 'delete',class:"login_button mdl-button mdl-js-button mdl-button--raised mdl-button--colored" %>
        <% end %>
      </div>
    </header>
    <div class="mdl-layout__drawer">
      <span class="mdl-layout-title">ChooseCards</span>
      <nav class="mdl-navigation">
        <!-- ここでメニューにファイル名を追加 -->
        <% for userfile in @userfiles %>
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect" id="<%=userfile.filename%>">
          <%= userfile.filename%></h1>
        </button>
        <% end %>
        <div id="import_file">
        <!-- ここにulタグでインポートするファイル名を追加 -->
      </div>
      </nav>
    </div>
    <main class="mdl-layout__content">
      <div class="page-content"></div>
      <!-- スナックバー用コンテナ-->
      <div id="demo-toast-example" class="mdl-js-snackbar mdl-snackbar">
        <div class="mdl-snackbar__text"></div>
        <button class="mdl-snackbar__action" type="button"></button>
      </div>
    </main>
  </div>
</body>
