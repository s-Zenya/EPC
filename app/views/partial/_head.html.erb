<header class="mdl-layout__header">
  <div class="mdl-layout__header-row">
    <span class="mdl-layout-title" id="big_title">
      <a href="/top" class="header_title">EPC</a>
    </span>
    <input id="vocalization" class="vocalization" type="text" placeholder="入力した単語を再生"></form>
    <button class="vocalization_button mdl-js-button  mdl-button--colored">
      <i class="material-icons  ">play_arrow</i>
    </button>
    <!-- userが存在するかの確認 -->
    <% if current_user.blank?  %>
    <%= link_to 'Login','/user/sign_in',class:"mdl-button mdl-js-button mdl-button--raised  login_button" %>
    <% else %>
    <span class="current_user"><%= @current_user.Username%>さん</span>
    <%= link_to 'LogOut','user/sign_out',:method => 'delete',class:"mdl-button mdl-js-button mdl-button--raised  login_button" %>
    <% end %>
  </div>
</header>
