<%= render :partial => "/partial/share_head" %>
<div class='new'>
  <div class="new_arrival">New Arrival</div>
  <div class="share_list">
    <% if @userfiles.present? %>
      <% for userfile in @userfiles %>
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text">ファイル名: <%= userfile.filename %></h2>
          </div>
          <div class="mdl-card__supporting-text file_description">
            説明: <%= userfile.description %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <%= link_to 'View Cards', fileshow_path(userfile), {:class => "mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect"} %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<%= link_to 'Back', root_path,class:'back_button mdl-button mdl-js-button mdl-button--primary' %>
