<%= render :partial => "/partial/share_head" %>
<div class='new'>
  <h1>最新のカード</h1>
  <div class="share_list">
    <% if @userfiles.present? %>
      <% for userfile in @userfiles %>
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
          <div class="mdl-card__title mdl-card--expand">
            <h2 class="mdl-card__title-text"><%= userfile.filename %></h2>
          </div>
          <div class="mdl-card__supporting-text">
            <%= userfile.description %>
          </div>
          <div class="mdl-card__actions mdl-card--border">
            <a class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
              <%= link_to 'View Cards', fileshow_path(userfile) %>
            </a>
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
<%= link_to 'Back', root_path,class:'back_button mdl-button mdl-js-button mdl-button--primary' %>
